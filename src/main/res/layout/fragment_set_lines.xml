<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/frameLayout">

        <TableLayout
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="90dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>
    </FrameLayout>

    <LinearLayout
            android:id="@+id/col_buttons"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/frameLayout"
            android:layout_alignLeft="@+id/frameLayout"
            android:layout_alignRight="@+id/frameLayout"
            android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
            android:id="@+id/row_buttons"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/frameLayout"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_alignBottom="@+id/frameLayout"
            android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
            android:id="@+id/center_colors"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/border_colors"
            android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
            android:id="@+id/border_colors"
            android:layout_width="fill_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:layout_above="@+id/frameLayout"
            android:layout_alignParentLeft="true">
    </LinearLayout>


</RelativeLayout>